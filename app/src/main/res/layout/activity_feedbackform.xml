<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Feedbackform">

    <!--        app:srcCompat="@drawable/dosa"-->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/feedbackimg"/>

    <TextView
        android:id="@+id/tvFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Very Dissatisfied"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/adamina"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/coloured_border">

        <RatingBar
            android:id="@+id/rbStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/blue"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/coloured_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your feedback"
        android:textColorHint="@color/black"
        android:fontFamily="@font/adamina"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="2dp"
        android:textColor="#151010"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/blue"
        android:text="Send Feedback"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/adamina"/>
</LinearLayout>

