<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGrey"
    android:layout_marginTop="05dp">


    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardElevation="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/linlay1"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Your Name"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlay2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification :"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/rec_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Qualification"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience :"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/rec_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Experience"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees :"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"/>
            <TextView

                android:id="@+id/rec_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Fees"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>